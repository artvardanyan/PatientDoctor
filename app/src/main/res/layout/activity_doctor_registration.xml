<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doc"
    android:orientation="vertical"
    tools:context=".activities.DoctorRegistration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:alpha="0.9"
            android:background="@android:color/transparent"
            app:cardCornerRadius="25dp"
            app:cardElevation="@dimen/cardview_default_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:drawableLeft="@drawable/ic_account_box_black_24dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="serif"
                    android:hint="Doctor Name"
                    android:inputType="text"
                    android:textColor="#1E88E5"
                    android:textColorHint="#1E88E5" />

                <EditText
                    android:id="@+id/did"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:drawableLeft="@drawable/ic_assignment_turned_in_black_24dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="serif"
                    android:hint="Qualification"
                    android:inputType="text"
                    android:textAllCaps="true"
                    android:textColor="#1E88E5"
                    android:textColorHint="#1E88E5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"

                    android:layout_marginTop="20dp"
                    android:fontFamily="serif"
                    android:text="Gender"
                    android:textColor="#1E88E5"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="-29dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="serif"
                        android:text="Male"
                        android:textColor="#1E88E5"
                        android:textSize="18sp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="serif"
                        android:text="Female"
                        android:textColor="#1E88E5"
                        android:textSize="18sp" />
                </RadioGroup>


                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="serif"
                    android:hint="Age"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="#1E88E5"
                    android:textColorHint="#1E88E5" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:drawableLeft="@drawable/ic_add_location_black_24dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="serif"
                    android:hint="Address"
                    android:inputType="textLongMessage"
                    android:textColor="#1E88E5"
                    android:textColorHint="#1E88E5" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="serif"
                    android:hint="Phone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="#1E88E5"
                    android:textColorHint="#1E88E5" />

                <Spinner
                    android:id="@+id/spin"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:entries="@array/department"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/curve"
                    android:text="Submit"
                    android:textColor="#ffffff" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>